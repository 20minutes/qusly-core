{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,

    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,

    "baseUrl": "./",

    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "src/models/client.ts",
    "src/models/transfer-manager.ts",
    "src/models/transfer-client.ts"
  ],
  "include": ["./src"]
}
