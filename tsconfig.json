{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,

    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,

    "rootDir": "./src",
    "baseUrl": "./",

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}
